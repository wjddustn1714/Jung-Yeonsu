    <script>
        function showQuestions() {
            const questions = document.getElementById('questions');
            questions.classList.remove('hidden');
        }
        function toggleVisibility(id) {
            const element = document.getElementById(id);
            element.classList.toggle('hidden');
        }
        function calculateScore() {
            const questions = document.querySelectorAll('.question');
            let totalScore = 0;
            questions.forEach(question => {
                const selectedOption = question.querySelector('input[type="radio"]:checked');
                if (selectedOption) {
                    totalScore += parseInt(selectedOption.value);
                }
            });
            if (totalScore === 0) {
                alert('각 질문에 답을 선택해주세요.');
                return;
            }
            const resultMessage = document.getElementById('resultMessage');
            const additionalInfo = document.getElementById('additionalInfo');
            if (totalScore >= 0 && totalScore <= 4) {
                resultMessage.textContent = '우울 아님';
            } else if (totalScore >= 5 && totalScore <= 9) {
                resultMessage.textContent = '가벼운 우울';
            } else if (totalScore >= 10 && totalScore <= 19) {
                resultMessage.textContent = '중간 정도의 우울 (가까운 지역센터나 전문기관 방문을 요망합니다.)';
                toggleVisibility('contact-info');
                toggleVisibility('reservation-info');
            } else if (totalScore >= 20 && totalScore <= 27) {
                resultMessage.textContent = '심한 우울 (전문기관의 치료적 개입과 평가가 필요합니다.)';
                toggleVisibility('contact-info');
                toggleVisibility('reservation-info');
            }
            additionalInfo.classList.remove('hidden');
            document.getElementById('result').classList.remove('hidden');
        }
    </script>
</body>
</html>
