# ========================================
# 환자 증상, 통증 기록
# ========================================
<!DOCTYPE html>
<html lang="ko">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>수술 후 증상 기록</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        .record {
            margin-bottom: 10px;
            padding: 10px;
            border: 1px solid #ccc;
        }
        .alert {
            color: red;
            font-weight: bold;
        }
    </style>
</head>
<body>
<h1>수술 후 증상 기록</h1>
<div>
    <textarea id="symptomInput" placeholder="증상 및 부작용을 입력하세요..." rows="4" cols="50"></textarea><br>
    <button onclick="addRecord()">기록 추가</button>
</div>
<div id="records"></div>
<script>
    const keywords = {
        출혈: ['출혈이 멈추지 않음', '심한 출혈', '지속적인 출혈', '치명적인 출혈', '다량 출혈', '급성 출혈'],
        통증: ['극심한 통증', '참을 수 없는 통증', '통증이 악화됨', '지속적인 통증', '괴로운 통증', '찌르는 듯한', '끊임없는'],
        감염: ['열', '발열', '고름', '감염', '농', '농양', '농포', '고름집'],
        부종: ['부어오름', '붉어짐', '발적', '부음', '부은', '부기', '부종'],
        상처: ['상처(수술부위)가 벌어짐', '상처 열림', '절개 부위 벌어짐', '상처 노출', '상처 찢어짐'],
        호흡: ['호흡 곤란', '숨쉬기 힘듦', '호흡이 어려움', '어지러움', '숨가쁨', '숨막힘', '숨이 참']
    };
    const alerts = {
        출혈: '출혈이 계속해서 멈추지 않으면 즉시 응급실에 가세요.',
        통증: '심한 통증이 지속되거나 악화되면 의사와 상담이 필요합니다. 병원에 방문해주세요.',
        감염: '열이 나고 상처가 붉어지면 감염의 위험이 있습니다. 더 심해지면 진찰이 필요합니다.',
        부종: '염증이 상당할 수 있습니다. 부종이 더 심해지면 진찰이 필요합니다.',
        상처: '수술부위가 벌어지면 진찰이 필요합니다. 병원에 방문해주세요.',
        호흡: '즉시 응급실에 가세요.',
    };
    function addRecord() {
        const input = document.getElementById('symptomInput').value.trim();
        if (input === '') {
            alert('증상 및 부작용을 입력하세요.');
            return;
        }
        const date = new Date().toISOString().split('T')[0];
        const record = document.createElement('div');
        record.className = 'record';
        record.innerHTML = `<p>${input} (${date})</p>`;
        // Check for keywords and add alert if necessary
        let alertAdded = false;
        for (let key in keywords) {
            keywords[key].forEach(keyword => {
                if (input.includes(keyword)) {
                    const alert = document.createElement('div');
                    alert.className = 'alert';
                    alert.innerText = alerts[key];
                    record.appendChild(alert);
                    alertAdded = true;
                }
            });
        }
        // If no keyword was matched, add the default alert
        if (!alertAdded) {
            const alert = document.createElement('div');
            alert.className = 'alert';
            alert.innerText = alerts['기타'];
            record.appendChild(alert);
        }
        document.getElementById('records').appendChild(record);
        document.getElementById('symptomInput').value = ''; // Clear the input field
    }
</script>
</body>
</html>

